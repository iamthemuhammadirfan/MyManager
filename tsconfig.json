{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["./app/*"],
      "assets": ["./app/assets/*"],
      "components": ["./app/components/*"],
      "constants": ["./app/constants/*"],
      "helpers": ["./app/helpers/*"],
      "routes": ["./app/routes/*"],
      "screens": ["./app/screens/*"],
      "types": ["./app/types/*"],
      "utils": ["./app/utils/*"]
    }
  },
  "exclude": ["node_modules"]
}
